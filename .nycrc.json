{
  "extends": "@istanbuljs/nyc-config-typescript",
  "all": true,
  "check-coverage": true,
  "reporter": ["html", "text", "lcov"],
  "report-dir": "coverage",
  "include": ["src/**/*.ts"],
  "exclude": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "test/**",
    "dist/**",
    "build/**",
    "node_modules/**"
  ],
  "lines": 80,
  "statements": 80,
  "functions": 80,
  "branches": 75
}

