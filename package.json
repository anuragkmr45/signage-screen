{
  "name": "hexmon-signage-player",
  "version": "1.0.0",
  "description": "Production-grade Ubuntu Electron digital signage player for HexmonSignage",
  "main": "dist/main/main/index.js",
  "author": "HexmonSignage",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:renderer": "tsc -p tsconfig.renderer.json --watch",
    "build": "npm run build:main && npm run build:renderer && npm run bundle:renderer && npm run copy-assets",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "tsc -p tsconfig.renderer.json",
    "bundle:renderer": "node scripts/build-renderer.js",
    "copy-assets": "node scripts/copy-assets.js",
    "start": "electron .",
    "start:dev": "cross-env NODE_ENV=development electron .",
    "package": "electron-builder --linux",
    "package:deb": "electron-builder --linux deb",
    "package:appimage": "electron-builder --linux AppImage",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json}\"",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "mocha --require ts-node/register 'test/unit/**/*.test.ts'",
    "test:integration": "mocha --require ts-node/register --timeout 10000 'test/integration/**/*.test.ts'",
    "test:performance": "mocha --require ts-node/register --timeout 30000 'test/performance/**/*.test.ts'",
    "test:fault": "mocha --require ts-node/register --timeout 10000 'test/fault-injection/**/*.test.ts'",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:performance && npm run test:fault",
    "test:watch": "mocha --require ts-node/register --watch --watch-files 'src/**/*.ts,test/**/*.ts' 'test/**/*.test.ts'",
    "test:coverage": "nyc --reporter=html --reporter=text npm run test:unit",
    "clean": "rimraf dist build"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "better-sqlite3": "^11.7.0",
    "crypto": "^1.0.1",
    "electron-log": "^5.2.2",
    "electron-store": "^10.0.0",
    "minio": "^8.0.6",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.2",
    "@types/sinon": "^17.0.2",
    "@types/ws": "^8.5.13",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "chai": "^4.3.10",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "esbuild": "^0.27.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "mocha": "^11.0.1",
    "nyc": "^15.1.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "sinon": "^17.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "build": {
    "appId": "com.hexmon.signage.player",
    "productName": "HexmonSignage Player",
    "directories": {
      "output": "build",
      "buildResources": "resources"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "Utility",
      "maintainer": "HexmonSignage <support@hexmon.com>",
      "vendor": "HexmonSignage",
      "synopsis": "Digital signage player for Ubuntu",
      "description": "Production-grade digital signage player with offline-first architecture, mTLS authentication, and comprehensive telemetry",
      "desktop": {
        "Name": "HexmonSignage Player",
        "Comment": "Digital Signage Player",
        "Categories": "Utility;",
        "Terminal": false
      }
    },
    "deb": {
      "depends": [
        "gconf2",
        "gconf-service",
        "libnotify4",
        "libappindicator1",
        "libxtst6",
        "libnss3"
      ],
      "afterInstall": "scripts/postinstall.sh",
      "afterRemove": "scripts/postremove.sh"
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
